# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:kartik1234@localhost:5432/LMS?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=LMS
DB_USER=postgres
DB_PASSWORD=kartik1234
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Password Configuration
BCRYPT_ROUNDS=12

# Email Configuration
EMAIL_SERVICE=ethereal
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_ethereal_email@example.com
EMAIL_PASS=your_ethereal_password
EMAIL_FROM=noreply@edusphere.com

# SMTP Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_SECURE=false



# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/*,video/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# User Configuration
MAX_USER_AVATAR_SIZE=5MB
ALLOWED_AVATAR_TYPES=image/jpeg,image/png,image/gif
MAX_USER_BIO_LENGTH=500

